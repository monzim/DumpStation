# Server Configuration
SERVER_HOST=0.0.0.0
SERVER_PORT=8080

# Database Configuration (System Database)
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_NAME=backup_service
DB_SSLMODE=disable

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRATION_MINUTES=10

# Discord Configuration (Single webhook for OTP and notifications)
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your_webhook_url_here
OTP_EXPIRATION_MINUTES=5

# Cloudflare Turnstile Configuration (Bot Protection)
# Get test keys from: https://developers.cloudflare.com/turnstile/reference/testing/
# Production keys from: https://dash.cloudflare.com/?to=/:account/turnstile
TURNSTILE_ENABLED=true
TURNSTILE_SITE_KEY=1x00000000000000000000AA
TURNSTILE_SECRET_KEY=1x0000000000000000000000000000000AA
TURNSTILE_TIMEOUT=10

# cors allowed origins
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:7511
CORS_DEBUG=true


# this is the default system user created at startup with admin privileges
SYSTEM_USERNAME=root
SYSTEM_EMAIL=root@dumpstation.monzim.com